{{#if myProducts}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each myProducts}}
  
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{image}}" alt="" class="bd-placeholder-img card-img-top" width="100%" height="225">
            <div class="card-body">
              <p class="card-text fw-bold">{{title}}</p>
              <p class="card-text">{{description}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-secondary text-uppercase">{{getFullNameFirstCharacter user.firstName user.lastName}}</button>
                  <button type="button" class="btn btn-sm btn-outline-primary">${{price}}</button>
                </div>
                <small class="text-body-secondary">9 mins</small>
              </div>
            </div>
          </div>
        </div>
    {{/each}}   
      </div>
{{else}}
<h1>No products</h1>
{{/if}}
